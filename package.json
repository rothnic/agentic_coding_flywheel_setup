{
  "name": "agentic-coding-flywheel-setup",
  "version": "0.4.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @acfs/web dev",
    "build": "bun run --filter @acfs/web build",
    "lint": "bun run --filter '*' lint",
    "type-check": "bun run --filter '*' type-check",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
